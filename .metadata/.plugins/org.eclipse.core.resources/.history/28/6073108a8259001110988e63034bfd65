var ui = require('/ui/components'),
	theme = require('/ui/theme');

function TabButton(icon, text) {
	function tabWidth() {
		return Ti.Platform.displayCaps.platformWidth / 4 - 20;
	}
	
	var self = new ui.Component(Ti.UI.createView({
		height:44,
		width:tabWidth(),
		width:Ti.
		bottom:3,
		backgroundColor:'#121212',
		borderRadius:5,
		borderColor:'#000000',
		borderWidth:1
	}));
	
	Ti.Gesture.addEventListener('orientationchange', function() {
		self.viewProxy.width = tabWidth();
	});
	
	return self;
}

function TabStripView() {
	var self = new ui.Component(Ti.UI.createView({
		height:50,
		backgroundColor:
	}));
	
	return self;
}

module.exports = TabStripView;