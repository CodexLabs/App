var _ = require('/lib/underscore'),
	ui = require('/ui/components'),
	theme = require('/ui/theme');

function TabButton(id, text, icon) {
	function tabWidth() {
		return Ti.Platform.displayCaps.platformWidth / 4;
	}
	
	var self = new ui.Component(Ti.UI.createView({
		width:tabWidth(),
		left:5,
		bottom:3,
		backgroundColor:'#121212',
		borderRadius:5,
		borderColor:'#f00',
		borderWidth:1
	}));
	
	Ti.Gesture.addEventListener('orientationchange', function() {
		self.viewProxy.width = tabWidth();
	});
	
	return self;
}

function TabStripView() {
	var self = new ui.Component(Ti.UI.createView({
		height:50,
		layout:'horizontal',
		backgroundColor:'#000000'
	}));
	
	//create and add tabs
	_.each([{
		title:L('updates', 'Stream'),
		icon:'/images/chat.png',
		id:'updates'
	},{
		title:L('groups', 'Groups'),
		icon:'/images/chat.png',
		id:'groups'
	},{
		title:L('events', 'Events'),
		icon:'/images/chat.png',
		id:'events'
	},{
		title:L('leaders', 'Leaders'),
		icon:'/images/chat.png',
		id:'leaders'
	}], function(obj) {
		var tab = new TabButton(obj.id, obj.text, obj.icon);
		self.add(tab);
	});
	
	return self;
}

module.exports = TabStripView;