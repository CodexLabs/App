function AppWindow() {
	//load dependencies
	var _ = require('/lib/underscore'),
		ui = require('/ui/components');
	
	//create base proxy object and component wrapper
	var self = new ui.Window({
		navBarHidden:true,
		exitOnClose:true,
		backgroundImage:'/images/back.png'
	});
	
	var header = new ui.View({
		backgroundImage:'/images/sliver.png',
		height:44,
		top:0
	});
	self.add(header);
	
	var logo = new ui.ImageView('/images/app_white.png', {
		top:5,
		left:5
	});
	header.add(logo);
	
	return self;
}

module.exports = AppWindow;